<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Базовая тёмная тема с оранжевыми акцентами -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <!-- Установка фонового цвета окна -->
        <item name="android:windowBackground">@color/dark_bg</item>
        <!-- По умолчанию текст белый -->
        <item name="android:textColor">@color/white</item>
        <!-- Кнопки оранжевые -->
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <!-- EditText с тёмным фоном и белым текстом -->
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
    </style>

    <!-- Стиль для Button: оранжевый фон, белый текст, округлые углы -->
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Стиль для EditText: тёмно-серый фон, белый ввод и светло-серый hint -->
    <style name="MyEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>


