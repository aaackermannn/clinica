<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    android:padding="16dp">

    <!-- Название экрана -->
    <TextView
        android:id="@+id/tvAppointmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Запись к врачу"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Имя врача -->
    <TextView
        android:id="@+id/tvDoctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Доктор Иванов"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppointmentTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Специальность врача -->
    <TextView
        android:id="@+id/tvSpecialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кардиолог"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvDoctorName"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Кнопка «Выбрать дату и время» -->
    <Button
        android:id="@+id/btnSelectDateTime"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Выбрать дату и время"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/primary"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSpecialty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Текст с выбранными датой/временем -->
    <TextView
        android:id="@+id/tvSelectedDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите дату и время"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSelectDateTime"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Кнопка «Записаться» -->
    <Button
        android:id="@+id/btnBook"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Записаться"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/primary"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedDateTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Нижнее меню навигации -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
