<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1) Верхняя панель с кнопкой Назад -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/dark_bg"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <!-- Кнопка Назад -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back_white"
            android:tint="@color/white"
            android:contentDescription="Назад" />

        <!-- Заголовок экрана -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Запись к врачу"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <!-- Основное содержимое прокручиваемое -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Фото врача (без белой рамки) -->
            <ImageView
                android:id="@+id/imgAppointmentDoctorPhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor_placeholder"
                android:layout_marginBottom="16dp" />

            <!-- Имя врача -->
            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя Доктора"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <!-- Специальность врача -->
            <TextView
                android:id="@+id/tvSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Специальность"
                android:textSize="16sp"
                android:textColor="@color/light_gray"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- Варианты даты/времени (RadioGroup) -->
            <RadioGroup
                android:id="@+id/rgDateTimeOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbOption1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 июня 2025, 09:00"
                    android:textColor="@color/white"
                    android:buttonTint="@color/primary"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/rbOption2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01 июля 2025, 11:30"
                    android:textColor="@color/white"
                    android:buttonTint="@color/primary"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/rbOption3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="03 июля 2025, 15:00"
                    android:textColor="@color/white"
                    android:buttonTint="@color/primary" />
            </RadioGroup>

            <!-- Кнопка «Записаться» -->
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Записаться"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation привязанный к низу -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        app:itemIconTint="@color/bottom_nav_icon_tint"
        app:itemTextColor="@color/bottom_nav_text_color"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>


