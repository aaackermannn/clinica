<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Фото врача -->
        <ImageView
            android:id="@+id/imgConfirmDoctorPhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/doctor_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="16dp" />

        <!-- Имя врача -->
        <TextView
            android:id="@+id/tvDoctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Доктор Шон Мерфи"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- Специальность -->
        <TextView
            android:id="@+id/tvSpecialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Хирург"
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:layout_marginBottom="16dp" />

        <!-- Дата -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата: 25 июня 2025"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Время -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время: 10:00"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp" />

        <!-- Кнопки -->
        <Button
            android:id="@+id/btnBackToHub"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="На главный экран"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnCancelBooking"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Отменить запись"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button" />
    </LinearLayout>
</ScrollView>

