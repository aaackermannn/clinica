<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    android:padding="16dp">

    <!-- Заголовок «Спасибо!» -->
    <TextView
        android:id="@+id/tvThankYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Спасибо!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Подзаголовок/описание -->
    <TextView
        android:id="@+id/tvConfirmationText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ваша запись была успешно подтверждена"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvThankYou"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Информация о враче -->
    <TextView
        android:id="@+id/tvDoctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Доктор Иванов"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmationText"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Специальность -->
    <TextView
        android:id="@+id/tvSpecialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кардиолог"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvDoctorName"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Дата -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата: 15 Июня 2025"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSpecialty"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Время -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время: 14:30"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Кнопка «На главную» -->
    <Button
        android:id="@+id/btnBackToHub"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="На главную"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/primary"
        android:padding="12dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Кнопка «Отменить запись» -->
    <Button
        android:id="@+id/btnCancelBooking"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Отменить запись"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/primary"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnBackToHub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Нижнее меню навигации -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
