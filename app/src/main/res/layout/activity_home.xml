<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Верхняя часть с приветствием -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Здравствуйте, Имя!"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Москва, Россия"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="8dp"/>

        <!-- Поиск -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="К примеру \"Сердце\""
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_background"/>

        <!-- Кнопки -->
        <Button
            android:id="@+id/btnMyAppointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ваши записи"
            android:textColor="@color/primary"
            android:backgroundTint="@color/light_blue"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnAllDoctors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Все врачи"
            android:textColor="@color/primary"
            android:backgroundTint="@color/light_blue"
            android:layout_marginTop="8dp"/>

        <!-- Ближайшая запись -->
        <TextView
            android:id="@+id/tvNextAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ближайшая запись:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layoutAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvAppointmentDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Доктор Шон Мерфи"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvAppointmentSpecialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Хирург"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvAppointmentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23 Марта, 16:00"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Нижняя навигация -->
    <include layout="@layout/bottom_nav"/>

</LinearLayout>