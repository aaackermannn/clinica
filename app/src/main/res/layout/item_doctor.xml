<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:layout_marginBottom="12dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/container_doctor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true">

        <!-- Фото врача -->
        <ImageView
            android:id="@+id/imgDoctorPhoto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/doctor_placeholder"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <!-- Имя врача -->
            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя Доктора"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- Специальность -->
            <TextView
                android:id="@+id/tvSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Специальность"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- Блок «О враче» с текстом-заглушкой -->
            <TextView
                android:id="@+id/tvAboutDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="О враче: Опытный специалист с более чем 10-летним стажем. Обслуживает взрослых и детей. Произвольная информация о докторе будет здесь."
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Кнопка «Записаться» (оранжевая) -->
        <Button
            android:id="@+id/btnBook"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Записаться"
            android:background="@drawable/rounded_button_small"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
