<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Секция "Мои предыдущие записи" -->
    <TextView
        android:id="@+id/tvPreviousAppointmentsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Мои предыдущие записи"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <!-- Здесь можно разместить RecyclerView или просто TextView-плейсхолдер -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPreviousAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:background="@drawable/rounded_search_bg" />

    <!-- Если записей нет, показываем сообщение -->
    <TextView
        android:id="@+id/tvNoPreviousAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Нет предыдущих записей"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="visible" />

    <!-- Кнопка «Выйти» -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Выйти"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Эта пустая view займёт всё свободное пространство, чтобы BottomNav всегда был внизу -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Navigation приклеен к низу -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        app:itemIconTint="@color/bottom_nav_icon_tint"
        app:itemTextColor="@color/bottom_nav_text_color"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>







