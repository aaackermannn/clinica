<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg">

    <!-- Логотип картинкой (предполагаем, что logo_medhub.png или logo_medhub.xml лежит в drawable/) -->
    <ImageView
        android:id="@+id/ivLogoLogin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_medhub"
        android:contentDescription="Логотип Med hub"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Кнопка «Войти с MedID» (без drawableStart) -->
    <Button
        android:id="@+id/btnLoginMedId"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="Войти с MedID"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/primary"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/ivLogoLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Текст «Нет аккаунта?» -->
    <TextView
        android:id="@+id/tvNoAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет аккаунта?"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnLoginMedId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Кнопка «Зарегистрируйтесь» -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="Зарегистрируйтесь"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/primary"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvNoAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

